#sociallinks
  display: inline-block
  list-style: none
  padding: 0
  margin: 0
  li
    display: inline-block
  li:after
    content: ", "
  li:last-child:after
    content: ""
  li:nth-last-child(2):after
    content: " and "

.post-list
  padding: 0
  .post-item
    list-style-type: none
    margin-left: 0
    margin-bottom: 1rem
    .meta
      display: block
      font-size: 14px
      color: #666
      min-width: 100px
      margin-right: 16px

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px
      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none
  .project-item
    margin-bottom: 5px

.tweet
  a
    display:block
    background:none
    color:$color-link
  a:hover
    background:none

  border:1px solid grey
  background: lighten($color-accent, 85%)
  -webkit-border-radius: 0.5rem
  -moz-border-radius: 0.5rem
  border-radius: 0.5rem
  margin:1rem 0;
  padding:0.5rem;
